<% include partials/_header %>
      
<a href="/urls/new"><button class="btn">Add new URL</button></a>
<div id="url-container">
<% for (let url in urls) { %>
  <div id="url">
    <h3><a href="<%= shortURL %>/u/<%= url %>"><%= shortURL %>/u/<%= url %></a></h3>
    <p><a href="<%= urls[url] %>"><%= urls[url] %></a></p>
  <!-- Delete Button -->
  <form action="/urls/<%= url %>/delete?_method=DELETE" method="POST">
    <!-- <input type="submit" value="Delete"> -->
    <button class="btn">Delete</button>
  </form>
  <!-- Edit Button -->
  <a href="/urls/<%= url %>"><button class="btn">Edit</button></a>
  </div>
<% } %>
</div>
<% include partials/_footer %>