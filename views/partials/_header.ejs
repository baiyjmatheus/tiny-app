<h1>Welcome to TinyApp</h1>


<% if (!username) { %>
<form action="/login" method="POST">
  <input type="text" name="username">
  <input type="submit" value="Login">
</form>
<% } else { %>
  <h2>Welcome back, <%= username %></h2>
  <form action="/logout" method="POST">
    <input type="submit" value="Log Out">
  </form>
<% } %>