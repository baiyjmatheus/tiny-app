<html lang="en">
  <head>
    <title>TinyApp</title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <div id="wrapper">
      <h1>TinyApp</h1>

      <!-- Nav -->
      <ul>
        <% if (!user) { %>
          <li><a href="/login"><button class='btn'>Login</button></a></li>
          <li><a href="/register"><button class='btn'>Register</button></a></li>
        <% } else { %>
          <li>Hello, <%= user.email %></li>
          <li>
            <form action="/logout?_method=DELETE" method="POST">
              <button class="btn">Logout</button>
            </form>
          </li>
        <% } %>
      </ul>
      